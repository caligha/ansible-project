pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from GitHub
                git 'https://github.com/caligha/ansible-project.git'
            }
        }

        stage('Build') {
            agent {
                label 'maven1'
            }
            steps {
                // Trigger Ansible Playbook for build
                ansiblePlaybook playbook: 'build-test.yml', inventory: 'inventory.ini'
            }
        }

        stage('Test') {
            agent {
                label 'maven1'
            }
            steps {
                // Run tests using Maven
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            agent {
                label 'maven1'
            }
            steps {
                // Execute SonarQube analysis
                script {
                    def scannerHome = tool 'SonarQubeScanner'
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

        stage('Deploy') {
            agent {
                label 'ansible-master1'
            }
            steps {
                // Trigger Ansible playbook for deployment
                ansiblePlaybook playbook: 'playbookrole.yml', inventory: 'inventory.ini', credentialsId: 'ansible-credentials', extras: "-e war_file=~/\$(basename target/*.war)"
            }
        }
    }

    post {
        always {
            // Clean up workspace
            cleanWs()
        }
    }
}
