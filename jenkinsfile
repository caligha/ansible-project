pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/caligha/asible-project.git'
            }
        }

        stage('Build') {
            agent {
                label 'maven'
            }
            steps {
                script {
                    // Specify the full path to ansible-playbook
                    sh '/path/to/ansible-playbook build-test.yml -i inventory.ini'
                }
            }
        }

        stage('Test') {
            agent {
                label 'maven'
            }
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            agent {
                label 'maven'
            }
            steps {
                script {
                    def scannerHome = tool 'SonarQubeScanner'
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

        stage('Deploy') {
            agent {
                label 'ansible-master1'
            }
            steps {
                script {
                    // Specify the full path to ansible-playbook
                    sh '/path/to/ansible-playbook playbookrole.yml -i inventory.ini --extra-vars "war_file=~/\$(basename target/*.war)"'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

