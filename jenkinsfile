pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            agent {
                label 'maven'
            }
            steps {
                script {
                    sh '/home/centos/ansible-project/build-test.yml -i inventory.ini'
                }
            }
        }

        stage('Test') {
            agent {
                label 'maven'
            }
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            agent {
                label 'maven'
            }
            steps {
                script {
                    def scannerHome = tool 'SonarQubeScanner'
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

        stage('Deploy') {
            agent {
                label 'ansible-master1'
            }
            steps {
                script {
                    ansiblePlaybook playbook: '/home/centos/ansible-project/playbookrole.yml', inventory: 'inventory.ini', credentialsId: 'ansible-credentials', extras: "-e war_file=~/\$(basename target/*.war)"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
