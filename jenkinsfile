pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Explicitly specify the Git repository URL and branch
                git branch: 'main', url: 'https://github.com/caligha/asible-project.git'
            }
        }

        stage('Build') {
            agent {
                label 'maven' // Use the Maven agent for building
            }
            steps {
                // Trigger Ansible Playbook for build
                script {
                    ansiblePlaybook playbook: 'build-test.yml', inventory: 'inventory.ini'
                }
            }
        }

        stage('Test') {
            agent {
                label 'maven' // Use the Maven agent for testing
            }
            steps {
                // Run tests using Maven
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            agent {
                label 'maven' // Use the Maven agent for SonarQube analysis
            }
            steps {
                // Execute SonarQube analysis
                script {
                    def scannerHome = tool 'SonarQubeScanner'
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

        stage('Deploy') {
            agent {
                label 'ansible-master1' // Use the Ansible agent for deployment
            }
            steps {
                // Trigger Ansible playbook for deployment
                script {
                    ansiblePlaybook playbook: 'playbookrole.yml', inventory: 'inventory.ini', credentialsId: 'ansible-credentials', extras: "-e war_file=~/\$(basename target/*.war)"
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace
            cleanWs()
        }
    }
}
