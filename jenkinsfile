pipeline {
    agent any
    environment {
        PATH = "/usr/local/bin:$PATH" // Update this path if ansible-playbook is located elsewhere
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh '/usr/bin/ansible-playbook /home/centos/ansible-project/build-test.yml -i inventory.ini'
            }
        }
        stage('Test') {
            steps {
                // Add test steps here if needed
            }
        }
        stage('SonarQube Analysis') {
            steps {
                // Add SonarQube analysis steps here if needed
            }
        }
        stage('Deploy') {
            steps {
                // Add deployment steps here if needed
            }
        }
    }
    post {
        always {
            cleanWs() // Clean workspace after pipeline execution
        }
    }
}
